{
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "dev": "vitest",
    "lint": "eslint --ext .cjs,.ts .",
    "prepare": "husky install",
    "release": "pnpm clean && pnpm build && pnpm lint && pnpm test && lerna publish",
    "test": "vitest run"
  },
  "lint-staged": {
    "*.{cjs,ts}": "eslint --fix",
    "*.{json,md,yml}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "prettier": "@meteorlxy/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@lerna-lite/cli": "^1.11.2",
    "@meteorlxy/eslint-config-prettier": "^2.16.1",
    "@meteorlxy/eslint-config-prettier-typescript": "^2.16.1",
    "@meteorlxy/prettier-config": "^2.11.0",
    "@meteorlxy/tsconfig": "^2.16.0",
    "@vitest/coverage-istanbul": "^0.22.1",
    "eslint": "^8.23.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "sort-package-json": "^1.57.0",
    "typescript": "^4.8.2",
    "unbuild": "^0.8.9",
    "vitest": "^0.22.1"
  },
  "packageManager": "pnpm@7.9.5",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/node",
        "eslint-plugin-import",
        "typescript"
      ]
    }
  }
}
