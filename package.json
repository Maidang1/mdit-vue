{
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "dev": "vitest",
    "lint": "eslint --ext .cjs,.ts .",
    "prepare": "husky install",
    "release": "pnpm release:check && lerna publish",
    "release:check": "pnpm clean && pnpm build && pnpm lint && pnpm test",
    "test": "vitest run"
  },
  "lint-staged": {
    "*.{cjs,ts}": "eslint --fix",
    "*.{json,md,yml}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "prettier": "@meteorlxy/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@lerna-lite/cli": "^1.17.0",
    "@meteorlxy/eslint-config-prettier": "^2.23.0",
    "@meteorlxy/eslint-config-prettier-typescript": "^2.23.0",
    "@meteorlxy/prettier-config": "^2.11.0",
    "@meteorlxy/tsconfig": "^2.23.1",
    "@vitest/coverage-istanbul": "^0.29.7",
    "eslint": "^8.36.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "sort-package-json": "^2.4.1",
    "typescript": "^5.0.2",
    "unbuild": "^1.1.2",
    "vitest": "^0.29.7"
  },
  "packageManager": "pnpm@8.0.0",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/node",
        "eslint-plugin-import",
        "typescript"
      ]
    }
  }
}
