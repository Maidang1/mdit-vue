{
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "dev": "vitest",
    "format": "prettier --write .",
    "lint": "eslint --ext .cjs,.ts . && prettier --check .",
    "prepare": "husky install",
    "release": "pnpm release:check && lerna publish",
    "release:check": "pnpm clean && pnpm build && pnpm lint && pnpm test",
    "test": "vitest run"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{cjs,ts}": "eslint --fix",
    "package.json": "sort-package-json"
  },
  "prettier": "@meteorlxy/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@lerna-lite/cli": "^2.5.0",
    "@lerna-lite/publish": "^2.5.0",
    "@meteorlxy/eslint-config-prettier": "^2.25.0",
    "@meteorlxy/eslint-config-prettier-typescript": "^2.27.1",
    "@meteorlxy/prettier-config": "^2.11.0",
    "@meteorlxy/tsconfig": "^2.23.1",
    "@vitest/coverage-istanbul": "^0.33.0",
    "eslint": "^8.44.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "sort-package-json": "^2.5.1",
    "typescript": "^5.1.6",
    "unbuild": "^1.2.1",
    "vitest": "^0.33.0"
  },
  "packageManager": "pnpm@8.6.7",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/node",
        "eslint-plugin-import",
        "typescript"
      ]
    }
  }
}
