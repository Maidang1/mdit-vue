{
  "name": "@mdit-vue/monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "dev": "vitest",
    "format": "prettier --write .",
    "lint": "eslint --ext .cjs,.ts . && prettier --check .",
    "prepare": "husky install",
    "release": "pnpm release:check && lerna publish",
    "release:check": "pnpm clean && pnpm build && pnpm lint && pnpm test",
    "test": "vitest run"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{cjs,ts}": "eslint --fix",
    "package.json": "sort-package-json"
  },
  "prettier": "@meteorlxy/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "^18.4.2",
    "@commitlint/config-conventional": "^18.4.2",
    "@lerna-lite/cli": "^2.7.0",
    "@lerna-lite/publish": "^2.7.0",
    "@meteorlxy/eslint-config-prettier": "^2.27.3",
    "@meteorlxy/eslint-config-prettier-typescript": "^2.28.1",
    "@meteorlxy/prettier-config": "^2.11.0",
    "@meteorlxy/tsconfig": "^2.29.0",
    "@vitest/coverage-istanbul": "1.0.0-beta.4",
    "eslint": "^8.53.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "sort-package-json": "^2.6.0",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0",
    "vitest": "1.0.0-beta.4"
  },
  "packageManager": "pnpm@8.10.5"
}
